@{
    ViewData["Title"] = "My Final Project";
}

<h1 style="text-align: center;" >Welcome</h1>
@{
    <ul>
        @foreach(var error in ViewBag.valErrors)
        {
            if(error.Errors.Count > 0)
                {
                    <li>@error.Errors[0].ErrorMessage</li>
                }
        }
    </ul>
}

<form action="login" method="POST">
    @Html.AntiForgeryToken()
    <fieldset class="col-sm-6" style="float: right; ">
        <h1>Log In</h1>
        <div class="form-group">
        <label for="Email">Email Address:</label>
        <input class="form-control" type="text" name="Email" class="text-danger">
        </div>
        <div class="form-group">
        <label for="Password">Password:</label>
        <input class="form-control" type="password" name="Password" value="">
        </div>
        <input type="submit"  class="btn btn-light" name="login" value="Login">
    </fieldset>
</form>

<form action="register" method="POST">
    @Html.AntiForgeryToken()
    <fieldset class="col-sm-6" >
        <h1>Register</h1>
        <div>
        <label for="UserName">Name:</label><input class="form-control" id="UserName" type="text" name="UserName" value="">
        @* @ViewBag.valErrors *@
        </div>
        <div class="form-group">
        <label for="UserAlias">Alias:</label>
        <input class="form-control" id="UserAlias" type="text" name="UserAlias" value="">
        </div>
        <div class="form-group">
        <label for="Email">Email Address:</label>
        <input class="form-control" id="Email" type="text" name="Email" value="">
        </div>
        <div class="form-group">
        <label for="Password">Password:</label>
        <input class="form-control" id="Password" type="password" name="Password" value="">
        </div>
        <div class="form-group">
        <label for="PasswordConf">Retype-Password:</label>
        <input class="form-control" id="PasswordConf" type="password" name="PasswordConf" value="">
        </div>
        <input type="submit" class="btn btn-light"  name="register" value="Register"   >
    </fieldset>
</form>


